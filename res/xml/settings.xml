<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
	<ListPreference 
	    android:key="filter"
	    android:title="@string/pref_title_filter" 
	    android:summary="@string/pref_summary_filter"
	    android:entries="@array/pref_filter_labels" 
	    android:entryValues="@array/pref_filter_values"
	    android:defaultValue="bayer"/>
	<CheckBoxPreference
	    android:key="review"
	    android:title="@string/pref_title_review" 
	    android:summary="@string/pref_summary_review"
	    android:defaultValue="true"/>
</PreferenceScreen>
