<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
	<ListPreference 
	    android:key="resolution"
	    android:title="@string/pref_title_resolution" 
	    android:summary="@string/pref_summary_resolution"
	    android:entries="@array/pref_resolution_labels" 
	    android:entryValues="@array/pref_resolution_values"
	    android:defaultValue="@string/pref_resolution_default"/>
    
    <ListPreference 
	    android:key="filter"
	    android:title="@string/pref_title_filter" 
	    android:summary="@string/pref_summary_filter"
	    android:entries="@array/pref_filter_labels" 
	    android:entryValues="@array/pref_filter_values"
	    android:defaultValue="@string/pref_filter_default"/>
	
	<ListPreference 
	    android:key="contrast"
	    android:title="@string/pref_title_contrast" 
	    android:summary="@string/pref_summary_contrast"
	    android:entries="@array/pref_contrast_labels" 
	    android:entryValues="@array/pref_contrast_values"
	    android:defaultValue="@string/pref_contrast_default"/>
	
